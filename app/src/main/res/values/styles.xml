<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Widget.Quizado" parent="@android:style/Widget.Material" />

    <!-- Navigation -->
    <style name="Widget.Quizado.NavigationBarContentFrameLayout" parent="android:Widget.Material">
        <item name="navigationBarBorderColor">?attr/ioschedNavigationBarDividerColor</item>
        <item name="navigationBarBorderSize">1dp</item>
    </style>

    <style name="Widget.Quizado.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.Quizado.ToolbarTitle</item>
        <item name="contentInsetStartWithNavigation">?sessionListKeyline</item>
        <item name="popupTheme">@style/AppTheme.PopupTheme</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <!-- Header-->
    <style name="TextAppearance.Quizado.ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize" tools:ignore="SpUsage">20dp</item>
    </style>

    <!-- Filters -->
    <!-- Easier to extend Chip.Choice because it includes some desired color effects. -->
    <style name="Widget.Quizado.FilterChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textAppearance">@style/TextAppearance.Quizado.FilterChip.Selectable</item>
        <item name="chipBackgroundColor">@color/chip_bg</item>
        <item name="chipIconVisible">true</item>
        <item name="chipStrokeColor">@color/chip_stroke</item>
    </style>

    <!-- Filters -->
    <style name="TextAppearance.Quizado.FilterChip.Selectable" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="Widget.Quizado.AppBar" parent="@style/Widget.Design.AppBarLayout">
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="Widget.Quizado.Button.Borderless" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="fontFamily">@font/merriweather</item>
        <item name="android:textColor">@color/colorOnBackground</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Quizado.Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/RoundedShapeAppearance</item>
        <item name="android:padding">@dimen/padding_normal</item>
    </style>
    <style name="RoundedShapeAppearance">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSize">@dimen/corner_size_normal</item>
    </style>



</resources>
