<resources>

    <style name="AppTheme" parent="Base.AppTheme" />

    <!-- Navigation -->
    <style name="Widget.Quizado.NavigationBarContentFrameLayout" parent="android:Widget.Material">
        <item name="navigationBarBorderColor">?attr/ioschedNavigationBarDividerColor</item>
        <item name="navigationBarBorderSize">1dp</item>
    </style>

    <!-- Filters -->
    <!-- Easier to extend Chip.Choice because it includes some desired color effects. -->
    <style name="Widget.Quizado.FilterChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textAppearance">@style/TextAppearance.Quizado.FilterChip.Selectable
        </item>
        <item name="chipBackgroundColor">@color/chip_bg</item>
        <item name="chipIconVisible">true</item>
        <item name="chipStrokeColor">@color/chip_stroke</item>
    </style>

    <!-- Filters -->
    <style name="TextAppearance.Quizado.FilterChip.Selectable" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="Widget.Quizado.AppBar" parent="@style/Widget.Design.AppBarLayout">
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="Widget.Quizado.Button.Borderless" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="fontFamily">@font/merriweather</item>
        <item name="android:textColor">@color/colorOnBackground</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
